    <script>
        // --- Smooth scrolling for anchor links (Giữ nguyên) ---
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // --- TỐI ƯU: Hiệu ứng cuộn cho Header ---
        const header = document.querySelector('.main-header');
        let lastScrollY = window.scrollY;

        const handleScroll = () => {
            const currentScrollY = window.scrollY;

            // Thêm/xóa class 'scrolled' để thay đổi bóng đổ (box-shadow)
            // Sử dụng ngưỡng nhỏ (10px) để không kích hoạt ngay lập tức
            if (currentScrollY > 10) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }

            // Thêm/xóa class 'header-hidden' để ẩn/hiện header
            // Điều kiện 'currentScrollY > 100' để header không bị ẩn ở đầu trang
            if (currentScrollY > lastScrollY && currentScrollY > 100) {
                // Cuộn xuống -> Ẩn header
                header.classList.add('header-hidden');
            } else {
                // Cuộn lên -> Hiện header
                header.classList.remove('header-hidden');
            }

            // Cập nhật vị trí cuộn cuối cùng
            lastScrollY = currentScrollY;
        };
        
        // Lắng nghe sự kiện scroll với tùy chọn 'passive' để cải thiện hiệu suất
        window.addEventListener('scroll', handleScroll, { passive: true });

        // --- Add loading animation class (Giữ nguyên) ---
        window.addEventListener('load', () => {
            document.body.classList.add('loaded');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
